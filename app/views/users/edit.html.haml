- provide(:title, "Edit user")
- provide(:button_text, "Save changes")
%h1 Update your profile

.row
  .col-md-6.col-md-offset-3
    = render "form", url_path: nil
    .gravatar_edit
      = gravatar_for @user
      %a{:href => "http://gravatar.com/emails", :target => "_blank", :rel => "noopener"}change
    - if !current_user.admin? && current_user?(@user)
      .row
        #delete_account.col-md-3.col-md-offset-9
          = link_to "Delete Account", @user, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-primary"